{
  "angularCompilerOptions": {
    "entryModule": "src/module#RESTAPIModule",
    "genDir": "dist",
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "allowUnusedLabels": false,
    "baseUrl": "",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "paths": {
      "@angular/http": ["node_modules/@angular/http"],
      "rxjs/*": ["node_modules/rxjs/*"]
    },
    "rootDir": "./src",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "stripInternal": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*.ngfactory.ts",
    "**/*.spec.ts",
    "**/*.shim.ts"
  ]
}
